@page "/AddNewEmployee"
@inherits EmployeeAddBase
@using EmployeeManagement.Models.Models

<EditForm Model="@EmployeeCreateDTO" OnValidSubmit="HandleValidEmployeeAddSubmit">
    <h3>Add Employee</h3>
    <hr />
    <DataAnnotationsValidator /> @*Validations wll not work for complex types(navigation properties)*@
    @*<ObjectGraphDataAnnotationsValidator/>*@
    <ValidationSummary />
    <div class="form-group row">
        <label for="firstName" class="col-sm-2 col-form-label">
            First Name
        </label>
        <div class="col-sm-10">
            <InputText id="firstName" class="form-control" placeholder="First Name"
                       @bind-Value="EmployeeCreateDTO.FirstName" />
            <ValidationMessage For="@(() => EmployeeCreateDTO.FirstName)" />
        </div>
    </div>
    <div class="form-group row">
        <label for="lastName" class="col-sm-2 col-form-label">
            Last Name
        </label>
        <div class="col-sm-10">
            <InputText id="lastName" class="form-control" placeholder="Last Name"
                       @bind-Value="EmployeeCreateDTO.LastName" />
            <ValidationMessage For="@(() => EmployeeCreateDTO.LastName)" />
        </div>
    </div>
    <div class="form-group row">
        <label for="email" class="col-sm-2 col-form-label">
            Email
        </label>
        <div class="col-sm-10">
            <InputText id="email" class="form-control" placeholder="Email"
                       @bind-Value="EmployeeCreateDTO.Email" />
            <ValidationMessage For="@(() => EmployeeCreateDTO.Email)" />
        </div>
    </div>
    <div class="form-group row">
        <label for="dob" class="col-sm-2 col-form-label">
            Date of Birth
        </label>
        <div class="col-sm-10">
            <InputDate id="dob" class="form-control" placeholder="Date of Birth"
                       @bind-Value="EmployeeCreateDTO.DateOfBrith" />
            <ValidationMessage For="@(() => EmployeeCreateDTO.DateOfBrith)" />
        </div>
    </div>
    <div class="form-group row">
        <label for="gender" class="col-sm-2 col-form-label">
            Gender
        </label>
        <div class="col-sm-10">
            <InputSelect id="gender" class="form-control" placeholder="Gender"
                         @bind-Value="EmployeeCreateDTO.Gender">
                @foreach (var gender in Enum.GetValues(typeof(Gender)))
                {
                    <option value="@gender">@gender</option>
                }
            </InputSelect>
        </div>
    </div>

    <input type="submit" class="btn btn-primary" />
</EditForm>